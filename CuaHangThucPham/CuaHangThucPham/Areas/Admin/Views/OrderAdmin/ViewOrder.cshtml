
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var orderDetails = (List<CuaHangThucPham.Models.OrderDetail>)ViewBag.orderDetails;
    var prd = (List<CuaHangThucPham.Models.Product>)ViewBag.prd;
}

<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Thông tin chi tiết đơn hàng</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-3 col-form-label">Người Đặt</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" placeholder="" value="@ViewBag.CustomerName" id="example-text-input" name="" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-3 col-form-label">Người Nhận</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" placeholder="" value="@ViewBag.Name" id="example-text-input" name="" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-3 col-form-label">Thời Gian</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" placeholder="@ViewBag.DateAdd" value="" id="example-text-input" name="" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-3 col-form-label">Số Điện Thoại</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" placeholder="" value="@ViewBag.Phone" id="example-text-input" name="" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-3 col-form-label">Địa Chỉ</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" placeholder="" value="@ViewBag.ShippingAddress" id="example-text-input" name="" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-3 col-form-label">Lưu ý</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" placeholder="" value="@ViewBag.Note" id="example-text-input" name="" required>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-3 col-form-label">Tình Trạng</label>
                        <div class="col-sm-9">
                            <input class="form-control" name="" type="text" value="@ViewBag.orderStatusHistoryName" placeholder="" id="example-text-input" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-3 col-form-label">Thanh Toán</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" placeholder="" value="@ViewBag.payment" id="example-text-input" name="" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-3 col-form-label">Giao Hàng</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" placeholder="" value="@ViewBag.shipping" id="example-text-input" name="" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-3 col-form-label">Phí Vận Chuyển</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" placeholder="" value="@string.Format("{0:#,##0}", ViewBag.ShippingFee)" id="example-text-input" name="" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-3 col-form-label">Giảm Giá</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" placeholder="" value="@string.Format("{0:#,##0}", ViewBag.Discount)" id="example-text-input" name="" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-3 col-form-label">Tổng Tiền</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" placeholder="" value="@string.Format("{0:#,##0}", ViewBag.Total)" id="example-text-input" name="" required>
                        </div>
                    </div>
                </div>
            </div>
            </br>

            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã sản phẩm</th>
                            <th>Tên sản phẩm</th>
                            <th>Ảnh</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < orderDetails.Count; i++)
                        {
                        <tr>
                            <td>@orderDetails[i].ProductID</td>
                            <td>@prd[i].ProductName</td>
                            <td>
                                <img style="width: 90px; height: 70px; " src="/Public/image/product/@prd[i].Image" class="img-responsive" />
                            </td>
                            <td>@orderDetails[i].Quantity</td>
                            <td>@string.Format("{0:#,##0}", orderDetails[i].Price)</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
