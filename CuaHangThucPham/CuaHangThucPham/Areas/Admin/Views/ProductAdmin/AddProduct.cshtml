@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="mt-0 header-title">Thêm Mới Sản Phẩm</h4>
                            <form method="post" action="/Admin/ProductAdmin/AddProduct" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group row">
                                            <label for="example-text-input" class="col-sm-3 col-form-label">Tên Sản Phẩm</label>
                                            <div class="col-sm-9">
                                                <input class="form-control" type="text" placeholder="" id="example-text-input" name="productname" required>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-3 col-form-label">Loại Sản Phẩm</label>
                                            <div class="col-sm-9">
                                                <select name="subcate" class="form-control">

                                                    @*@foreach (var item in Model)
                        {
                            <option value="@item.SubCategoriesID">@item.SubCategoriesName</option>

                        }*@
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="example-text-input" class="col-sm-3 col-form-label">Nhãn Hiệu</label>
                                            <div class="col-sm-9">
                                                <input class="form-control" name="brand" type="text" placeholder="" id="example-text-input" required>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="example-text-input" class="col-sm-3 col-form-label">Model</label>
                                            <div class="col-sm-9">
                                                <input class="form-control" name="model" type="text" placeholder="" id="example-text-input" required>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="example-text-input" class="col-sm-3 col-form-label">Nhà Cung Cấp</label>
                                            <div class="col-sm-9">
                                                <input class="form-control" name="suppiler" type="text" placeholder="" id="example-text-input" required>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label for="example-number-input" class="col-sm-2 col-form-label">Giá Bán</label>
                                            <div class="col-sm-4">
                                                <input class="form-control" name="pricenew" type="text" id="example-text-input" data-type="currency" placeholder="">
                                            </div>
                                            <label for="example-number-input" class="col-sm-2 col-form-label">Giá Gốc</label>
                                            <div class="col-sm-4">
                                                <input class="form-control" name="priceold" type="text" id="example-text-input" data-type="currency" placeholder="">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="example-text-input-sm" class="col-sm-2 col-form-label">Tóm Tắt</label>
                                            <div class="col-sm-10">
                                                <textarea required name="summary" class="form-control" rows="5"></textarea>
                                            </div>
                                        </div>
                                        <div class="m-b-30">

                                            <div class="fallback">
                                                <input name="file" type="file" multiple="multiple">
                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group row">
                                            <label for="example-text-input-sm" class="col-sm-2 col-form-label">Mô Tả</label>
                                            <div class="col-sm-10">
                                                <textarea required name="summary" class="form-control" rows="16"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="example-date-input" class="col-sm-3 col-form-label">Ngày Thêm</label>
                                            <div class="col-sm-9">
                                                <input class="form-control" type="date" value="@String.Format("{0:yyyy-MM-dd}", DateTime.Now)" id="example-date-input">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">

                                    <div class="col-sm-5">
                                    </div>
                                    <div class="col-sm-4">
                                        <button type="submit" class="btn btn-primary">
                                            Lưu
                                        </button>
                                        <button type="reset" class="btn btn-secondary">
                                            Hủy
                                        </button>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->

        </div>
        <!-- container-fluid -->
    </div>
    <!-- content -->
</div>