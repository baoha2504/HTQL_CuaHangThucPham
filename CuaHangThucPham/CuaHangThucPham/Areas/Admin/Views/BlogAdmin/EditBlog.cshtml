@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="mt-0 header-title">Thông Tin Bài Viết</h4>
                            </br>
                            <form method="post" action="/Admin/BlogAdmin/EditBlog" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group row">
                                            <label for="example-text-input" class="col-sm-3 col-form-label">Tiêu đề</label>
                                            <div class="col-sm-9">
                                                <input class="form-control" type="text" placeholder="" value="@ViewBag.Title" id="example-text-input" name="title" required>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="example-text-input" class="col-sm-3 col-form-label">Người thêm</label>
                                            <div class="col-sm-9">
                                                <input class="form-control" type="text" value="@ViewBag.name" placeholder="" id="example-text-input" name="name" required readonly>
                                                <input hidden class="form-control" type="text" value="@ViewBag.id" placeholder="" id="example-text-input" name="cusid" required>
                                                <input hidden class="form-control" type="text" value="@ViewBag.BlogID" placeholder="" id="example-text-input" name="blogid" required>
                                            </div>
                                        </div>
                                        <div class="m-b-30">

                                            <div class="fallback">
                                                <input name="file" type="file" multiple="multiple">
                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group row">
                                            <label for="example-text-input-sm" class="col-sm-2 col-form-label">Nội dung</label>
                                            <div class="col-sm-10">
                                                <textarea required name="content" class="form-control" rows="16">@ViewBag.Content</textarea>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="example-date-input" class="col-sm-3 col-form-label">Ngày Thêm</label>
                                            <div class="col-sm-9">
                                                <input class="form-control" type="text" name="date" value="@ViewBag.dateadded" id="example-date-input" readonly>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">

                                    <div class="col-sm-5">
                                    </div>
                                    <div class="col-sm-4">
                                        <button type="submit" class="btn btn-primary">
                                            Lưu
                                        </button>
                                        <button type="reset" class="btn btn-secondary">
                                            Hủy
                                        </button>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->

        </div>
        <!-- container-fluid -->
    </div>
    <!-- content -->
</div>