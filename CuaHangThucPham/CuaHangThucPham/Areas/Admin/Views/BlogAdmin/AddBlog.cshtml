@{
    ViewBag.Title = "AddBlog";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="mt-0 header-title">Thêm Mới Bài Viết</h4>
                            </br>
                            <form method="post" action="/Admin/ProductAdmin/AddProduct" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group row">
                                            <label for="example-text-input" class="col-sm-3 col-form-label">Tiêu đề</label>
                                            <div class="col-sm-9">
                                                <input class="form-control" type="text" placeholder="" id="example-text-input" name="productname" required>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="example-text-input" class="col-sm-3 col-form-label">Người thêm</label>
                                            <div class="col-sm-9">
                                                <input class="form-control" type="text" placeholder="" id="example-text-input" name="productname" required>
                                            </div>
                                        </div>
                                        <div class="m-b-30">

                                            <div class="fallback">
                                                <input name="file" type="file" multiple="multiple">
                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group row">
                                            <label for="example-text-input-sm" class="col-sm-2 col-form-label">Nội dung</label>
                                            <div class="col-sm-10">
                                                <textarea required name="summary" class="form-control" rows="16"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="example-date-input" class="col-sm-3 col-form-label">Ngày Thêm</label>
                                            <div class="col-sm-9">
                                                <input class="form-control" type="date" value="@String.Format("{0:yyyy-MM-dd}", DateTime.Now)" id="example-date-input">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">

                                    <div class="col-sm-5">
                                    </div>
                                    <div class="col-sm-4">
                                        <button type="submit" class="btn btn-primary">
                                            Lưu
                                        </button>
                                        <button type="reset" class="btn btn-secondary">
                                            Hủy
                                        </button>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->

        </div>
        <!-- container-fluid -->
    </div>
    <!-- content -->
</div>