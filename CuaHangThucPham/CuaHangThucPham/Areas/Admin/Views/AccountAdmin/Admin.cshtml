
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var customers = (List<CuaHangThucPham.Models.Customer>)ViewBag.customers;
}

<div class="container-fluid">

    <!-- Page Heading -->
    

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách tài khoản admin</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Email</th>
                            <th>Quyền</th>
                            <th>Tình trạng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < customers.Count; i++)
                        {
                            <tr>
                                <td>@customers[i].CustomerID</td>
                                <td>@customers[i].Email</td>
                                @if (customers[i].Access == 1)
                                {
                                    <td>Admin hệ thống</td>
                                }
                                else if (customers[i].Access == 2)
                                {
                                    <td>Nhân viên bán hàng</td>
                                }
                                else if (customers[i].Access == 3)
                                {
                                    <td>Nhân viên kho</td>
                                }
                                else if (customers[i].Access == 4)
                                {
                                    <td>Người dùng</td>
                                }
                                @if (customers[i].Prohibit == 1)
                                {
                                    <td>Hoạt động</td>
                                }
                                else
                                {
                                    <td>Khóa</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
