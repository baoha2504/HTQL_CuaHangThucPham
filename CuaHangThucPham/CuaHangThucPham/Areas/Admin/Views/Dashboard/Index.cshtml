
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var rv = (List<CuaHangThucPham.Models.Review>)ViewBag.rv;
    var odshs = (List<CuaHangThucPham.Models.OrderStatusHistory>)ViewBag.odshs;
    var bl0 = (List<CuaHangThucPham.Models.Bill>)ViewBag.bl0;
    var bl1 = (List<CuaHangThucPham.Models.Bill>)ViewBag.bl1;
    var cus0 = (List<CuaHangThucPham.Models.Customer>)ViewBag.cus0;
    var cus1 = (List<CuaHangThucPham.Models.Customer>)ViewBag.cus1;
}
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Bảng Điều Khiển</h1>
        <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-download fa-sm text-white-50"></i> Xuất báo cáo
        </a>
    </div>

    <!-- Content Row -->
    <div class="row">

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Tổng thu trong tháng
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@string.Format("{0:#,##0}", ViewBag.tongdoanhthu)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Tổng chi trong tháng
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@string.Format("{0:#,##0}", ViewBag.tongchi)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Đơn đặt hàng đã xử lý
                            </div>
                            <div class="row no-gutters align-items-center">
                                <div class="col-auto">
                                    <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@ViewBag.demchuaxuly%</div>
                                </div>
                                <div class="col">
                                    <div class="progress progress-sm mr-2">
                                        <div class="progress-bar bg-info" role="progressbar" style="width: @ViewBag.demchuaxuly%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Phản hồi bình luận
                            </div>
                            <div class="row no-gutters align-items-center">
                                <div class="col-auto">
                                    <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@ViewBag.tylephanhoi%</div>
                                </div>
                                <div class="col">
                                    <div class="progress progress-sm mr-2">
                                        <div class="progress-bar bg-warning" role="progressbar" style="width: @ViewBag.tylephanhoi%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-comments fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Row -->

    <div class="row">

        <!-- Area Chart -->
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Biều Đồ Doanh Thu</h6>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                            <div class="dropdown-header">Xem thêm</div>
                            <a class="dropdown-item" href="#">Trong ngày</a>
                            <a class="dropdown-item" href="#">Trong tháng</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Xem khoảng lớn hơn</a>
                        </div>
                    </div>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="myAreaChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pie Chart -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Nguồn Doanh Thu</h6>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                            <div class="dropdown-header">Xem thêm</div>
                            <a class="dropdown-item" href="#">Trong ngày</a>
                            <a class="dropdown-item" href="#">Trong tháng</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Xem khoảng lớn hơn</a>
                        </div>
                    </div>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div class="chart-pie pt-4 pb-2">
                        <canvas id="myPieChart"></canvas>
                    </div>
                    <div class="mt-4 text-center small">
                        <span class="mr-2">
                            <i class="fas fa-circle text-primary"></i> Trực tuyến
                        </span>
                        <span class="mr-2">
                            <i class="fas fa-circle text-success"></i> Tại cửa hàng
                        </span>
                        <span class="mr-2">
                            <i class="fas fa-circle text-info"></i> Khác
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Bình luận -->
        <div class="col-lg-6">
            <div class="card position-relative">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Đánh Giá Trong Tháng</h6>
                </div>
                @for (int i = 0; i < rv.Count; i++) { 
                    <div class="card-body">
                        <a class="dropdown-item d-flex align-items-center" href="/Admin/ReviewAdmin/Reply/@rv[i].ReviewID">
                            <div class="mr-3">
                                @if (i % 3 == 1)
                                {
                                    <img style="width:35px; height:auto" class="rounded-circle" src="~/Areas/Admin/Public/img/undraw_profile_1.png" alt="...">
                                }
                                else if (i % 3 == 2)
                                {
                                    <img style="width:35px; height:auto" class="rounded-circle" src="~/Areas/Admin/Public/img/undraw_profile_2.png" alt="...">
                                }
                                else
                                {
                                    <img style="width:35px; height:auto" class="rounded-circle" src="~/Areas/Admin/Public/img/undraw_profile_3.png" alt="...">
                                }
                                <div class="status-indicator bg-success"></div>
                            </div>
                            <div>
                                <span class="font-weight-bold">@rv[i].Comment</span>
                                <div class="small text-gray-500">Khách hàng #@rv[i].CustomerID · @string.Format("{0:dd/MM/yyyy}", rv[i].DateAdded) </div>
                            </div>
                        </a>
                    </div>
                }
            </div>

        </div>

        <!-- Đơn đặt hàng -->
        <div class="col-lg-6">

            <div class="card position-relative">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Đơn Đặt Hàng</h6>
                </div>
                @for (int i = 0; i < odshs.Count; i++)
                { 
                <div class="card-body">
                    <a class="dropdown-item d-flex align-items-center" href="/Admin/OrderAdmin/ViewOrder/@odshs[i].OrderID">
                        <div class="mr-3">
                            <div class="icon-circle bg-gradient-primary">
                                <i class="fas fa-file-alt text-white"></i>
                            </div>
                        </div>
                        <div>
                            <span class="font-weight-bold">Đơn hàng #@odshs[i].OrderID đang trong tình trạng @odshs[i].OrderStatusName.ToLower()</span>
                            <div class="small text-gray-500">@odshs[i].DateAdd</div>
                        </div>
                    </a>
                </div>
                }                    
                </div>

        </div>
    </div>

    <div class="row" style="padding-top:20px">
        
        <!-- Bán hàng tại cửa hàng -->
        <div class="col-lg-6">

            <div class="card position-relative">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Bán Hàng Tại Cửa Hàng</h6>
                </div>
                @for (int i = 0; i < bl0.Count; i++)
                {
                    <div class="card-body">
                        <a class="dropdown-item d-flex align-items-center" href="/Admin/BillAdmin/ViewBill/@bl0[i].BillID">
                            <div class="mr-3">
                                <div class="icon-circle bg-gradient-success">
                                    <i class="fas fa-donate text-white"></i>
                                </div>
                            </div>
                            <div>
                                <span class="font-weight-bold">Hóa đơn #@bl0[i].BillID được nhân viên @cus0[i].FirstName @cus0[i].LastName xử lý tại cửa hàng</span>
                                <div class="small text-gray-500">@bl0[i].OrderDate · @string.Format("{0:#,##0}", bl0[i].Total) đ</div>
                            </div>
                        </a>
                    </div>
                 }
                </div>

        </div>

        <!-- Nhập hàng -->
        <div class="col-lg-6">

            <div class="card position-relative">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Nhập Hàng Tại Kho</h6>
                </div>
                @for (int i = 0; i < bl1.Count; i++)
                {
                    <div class="card-body">
                        <a class="dropdown-item d-flex align-items-center" href="/Admin/InventoryAdmin/Index">
                            <div class="mr-3">
                                <div class="icon-circle bg-gradient-warning">
                                    <i class="fas fa-database text-white"></i>
                                </div>
                            </div>
                            <div>
                                <span class="font-weight-bold">Nhân viên @cus1[i].FirstName @cus1[i].LastName đã nhập lô hàng @bl1[i].CustomerID tại kho</span>
                                <div class="small text-gray-500">@bl1[i].OrderDate · @string.Format("{0:#,##0}", bl1[i].Total) đ</div>
                            </div>
                        </a>
                    </div>
                }
                </div>

        </div>

    </div>
</div>
<!-- /.container-fluid -->
