
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var billDetails = (List<CuaHangThucPham.Models.BillDetail>)ViewBag.billDetails;
    var prd = (List<CuaHangThucPham.Models.Product>)ViewBag.prd;
}

<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Thông tin chi tiết hóa đơn bán hàng</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-3 col-form-label">Mã Hóa Đơn</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" placeholder="" value="@ViewBag.BillID" id="example-text-input" name="" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-3 col-form-label">Nhân Viên Xử Lý</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" placeholder="" value="@ViewBag.StaffName" id="example-text-input" name="" required>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-3 col-form-label">Thời Gian</label>
                        <div class="col-sm-9">
                            <input class="form-control" name="" type="text" value="@ViewBag.OrderDate" placeholder="" id="example-text-input" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-3 col-form-label">Tổng Tiền</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" placeholder="@string.Format("{0:#,##0}", ViewBag.Total)" value="" id="example-text-input" name="" required>
                        </div>
                    </div>

                </div>
            </div>
            </br>

            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã sản phẩm</th>
                            <th>Tên sản phẩm</th>
                            <th>Ảnh</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < billDetails.Count; i++)
                        {
                            <tr>
                                <td>@billDetails[i].ProductID</td>
                                <td>@prd[i].ProductName</td>
                                <td>
                                    <img style="width: 90px; height: 70px; " src="/Public/image/product/@prd[i].Image" class="img-responsive" />
                                </td>
                                <td>@billDetails[i].Quantity</td>
                                <td>@string.Format("{0:#,##0}", billDetails[i].Price)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
