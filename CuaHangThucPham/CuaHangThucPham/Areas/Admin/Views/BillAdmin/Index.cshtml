
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var bills = (List<CuaHangThucPham.Models.Bill>)ViewBag.bills;
    var customers = (List<CuaHangThucPham.Models.Customer>)ViewBag.customers;
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Table</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách hóa đơn bán hàng</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Thời gian</th>
                            <th>Nhân viên bán</th>
                            <th>Tổng tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < bills.Count; i++)
                        {
                            <tr>
                                <td>@bills[i].BillID</td>
                                <td>@string.Format("{0:dd/MM/yyyy}", bills[i].OrderDate)</td>
                                <td>@customers[i].FirstName @customers[i].LastName</td>
                                <td>@string.Format("{0:#,##0}", bills[i].Total)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

