                                    <tfoot>
                                        <tr>
                                            <td class="text-right" colspan="4"><strong>Tổng:</strong></td>
                                            <td class="text-right">$1,000.00</td>
                                        </tr>
                                        <tr>
                                            <td class="text-right" colspan="4"><strong>Phí vận chuyển:</strong></td>
