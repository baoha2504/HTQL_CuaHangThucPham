@using CuaHangThucPham.Models;
@{
    ViewBag.Title = "SingaleBlog";
    Layout = "~/Views/Shared/_layoutRight.cshtml";
    var blogs = (List<CuaHangThucPham.Models.Blog>)ViewBag.Blogs;
}
<div class="container">
    <div class="row">

        <div id="content" class="col-sm-9">
            <div class="blog1 blog">
                <div class="blog_img"><img src="~/Public/image/blog/@blogs[0].Image" alt="" /></div>
                <h4 class="p-name"><a href="">@blogs[0].Title</a></h4>
                <ul class="blog-meta">
                    <li><i class="fa fa-clock-o"></i><span class="dt-published">@blogs[0].DateAdded</span></li>
                    <li><i class="fa fa-comment-o"></i><span>2</span> Bình luận</li>
                    <li><i class="fa fa-user"></i><span><a rel="author" title="Posts by Admin" href="#">@blogs[0].Customer.FirstName @blogs[0].Customer.LastName</a></span></li>
                </ul>
                <p class="p-summary"></p>
                <p>
                    @blogs[0].Content
                </p>

                <div class="blog-comment">
                    <div class="comment-form col-sm-12">
                        <div class="row">
                            <div class="col-sm-12 row">
                                <h4 class="section-title">Đánh giá bài viết</h4>
                                <div class="taberna-line"> <span class="line-inner bg-color"></span> </div>
                            </div>
                            <div class="comment-respond" id="respond">

                                <form novalidate class="comment-form" id="commentform" method="post" action="#">
                                    <div class="row">
                                        <div class="name col-xs-12 col-sm-12">
                                            <label>Họ tên *</label>
                                            <input type="text" aria-required="true" value="" name="author" id="author">
                                        </div>
                                        <div class="email col-xs-12 col-sm-12">
                                            <label>Email *</label>
                                            <input type="email" aria-required="true" value="" name="email" id="email">
                                        </div>
                                        <div class="comment-form-comment col-xs-12 col-sm-12">
                                            <label for="comment">Bình luận</label>
                                            <textarea required rows="8" cols="45" name="comment" id="comment"></textarea>
                                        </div>
                                    </div>
                                    <p class="form-submit">
                                        <button type="submit" value="send" class="submit taberna-btn bg-color" id="submit" name="submit" onclick="myFunction()">Gửi </button>
                                        <input type="hidden" id="comment_post_ID" value="872" name="comment_post_ID" class="taberna-btn bg-color">
                                        <input type="hidden" value="0" id="comment_parent" name="comment_parent" class="taberna-btn bg-color">
                                    </p>
                                    <p style="display: none;">
                                        <input type="hidden" value="daabc47a44" name="akismet_comment_nonce" id="akismet_comment_nonce">
                                    </p>
                                    <p style="display: none;"></p>
                                    <input type="hidden" value="1452356543102" name="ak_js" id="ak_js">
                                </form>
                            </div>
                            <!-- #respond -->

                        </div>
                    </div>
                </div>
                <!-- end comment-form -->
            </div>
        </div>
    </div>
</div>

<script>
    function myFunction() {
        alert("Xin lỗi! Tính năng này đăng được phát triển");
    }
</script>